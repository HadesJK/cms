<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.edu.zju.isee.cms.mapper.LungImgSlideMapper" >
    <resultMap id="BaseResultMap" type="cn.edu.zju.isee.cms.entity.LungImgSlide" >
        <id column="id" property="id" jdbcType="INTEGER" />
        <result column="slideId" property="slideId" jdbcType="INTEGER" />
        <result column="fileName" property="fileName" jdbcType="VARCHAR" />
        <result column="absolutePath" property="absolutePath" jdbcType="VARCHAR" />
    </resultMap>
    <sql id="Base_Column_List" >
        id, slideId, fileName, absolutePath
    </sql>

    <insert id="insert" parameterType="cn.edu.zju.isee.cms.entity.LungImgSlide" useGeneratedKeys="true" keyProperty="id">
        insert into lung_img (slideId, fileName,absolutePath)
        values ( #{slideId,jdbcType=INTEGER}, #{fileName,jdbcType=VARCHAR},#{absolutePath,jdbcType=VARCHAR})
    </insert>

    <select id="selectBySlideId" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select * from lung_img
        where slideId = #{slideId,jdbcType=INTEGER}
    </select>

    <select id="selectById" resultMap="BaseResultMap" parameterType="java.lang.Integer" >
        select * from lung_img
        where id = #{id,jdbcType=INTEGER}
    </select>

</mapper>